                <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Product</th>
                      <th scope="col">Price</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Total</th>
                      <th scope="col">Remove</th>
                    </tr>
                  </thead>
                  <tbody>

                    <% for(let i=0;i<cart.items.length;i++) { %>
                    <tr>
                      <td scope="row"><%= productList[i].productName %></td>
                      <td class="align-middle">$<%= productList[i].price %></td>
                      <td class="align-middle border-0 ">
                        
                        <div class="input-group quantity mx-auto" style="width: 150px;">
                            <div class="input-group-btn">
                                <button onclick="decrementQuantity('<%= cart.items[i].productId %>', '<%= cart.userId %>')" class="btn btn-sm btn-primary btn-minus" >
                                <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" style="min-width: 1.5rem;" value="<%= cart.items[i].quantity %>">
                            <div class="input-group-btn">
                                <button onclick="incrementQuantity('<%= cart.items[i].productId %>', '<%= cart.userId %>')" class="btn btn-sm btn-primary btn-plus"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                        
                      </td>
                      <td class="align-middle">$<%= cart.items[i].totalPrice.toFixed(2) %></td>
                      <td class="align-middle"><button onclick="removeItem('<%= cart.items[i].productId %>', '<%= cart.userId %>')" style="box-shadow: none;" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
                    </tr>
                    <% } %>

                  </tbody>
                </table>
